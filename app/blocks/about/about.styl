$photo-width = 295px
$photo-height = 250px
$frame-padding = 5px

.about
	display block
	background-image url(../images/about/background.jpg)
	&__bg
		background-image linear-gradient(to top, transparent, 12%, rgba(white, .73))
	&__wrapper
		padding-top 55px
		padding-bottom 40px
		display flex
		align-items center
		@media(max-width 1200px)
			justify-content space-between
			align-items flex-start
		@media(max-width 600px)
			flex-direction column
	&__text
		text-align center
		flex-basis 50%
		@media(max-width 1000px)
			flex-basis 60%
	&__desc
		margin-x auto
		margin-bottom 40px
		width 80%
		line-height 2
	&__position
		margin-bottom 40px
		font-family $alegreya
		font-size 24px
		font-weight bold
	&__author
		margin-bottom 30px
	&__name, &__sname
		padding 15px 22px
		display inline-block
		font-family $alegreya
		font-size 24px
		vertical-align middle
		border-top 1px solid #d7d5ca
		border-bottom 1px solid #d7d5ca
		@media(max-width 1000px)
			display block
			border none
	&__name
		margin-right 19px
		@media(max-width 1000px)
			margin-right 0
	&__sname
		margin-left 17px
		@media(max-width 1000px)
			margin-left 0
	&__avatar
		display inline-block
		vertical-align middle
		border 5px solid white
		border-radius 50%
	&__quote-block
		margin-x auto
		margin-bottom 20px
		width 65%
		@media(max-width 1310px)
			width 80%
		@media(max-width 1100px)
			width 90%
		@media(max-width 1000px)
			width 100%
	&__quote
		display inline-block
		width 60%
		font-family $scriptin
		font-size 24px
		color #a47d5e		
	&__quote-mark
		display inline-block
		width 19%
		font-family 'Times New Roman', Times, serif
		font-size 60px
		color rgba($taupe, .5)
		&_right
			vertical-align text-top
		@media(max-width 1000px)
			display none
	&__pictures
		position relative
		margin-top 20px
		flex-basis 50%
		@media(max-width 1000px)
			flex-basis 40%
	&__stamp
		position absolute
		z-index 10
		top 50%
		left 42%
		margin-top -(247px / 2)
		margin-left -(247px / 2)
		padding-x 45px
		padding-top 98px
		size 247px
		font-family $alegreya
		font-size 30px
		line-height 33px
		text-align center
		text-transform uppercase
		color #c9b176
		background-image url(../images/about/stamp.png)
		@media(max-width 1200px)
			display none
	&__photos
		text-align center
	&__photo-container
		position relative
		margin 10px
		display inline-block
		width 40%
		@media(max-width 1000px)
			size 80% auto
		@media(max-width 600px)
			width 40%
	&__photo
		size 100%
	&__photo-frame
		position absolute
		top $frame-padding
		right $frame-padding
		left $frame-padding
		bottom $frame-padding
		border $frame-padding solid white