.recipe
	display block
	background-image url(../images/recipe/background.png)
	background-repeat no-repeat
	background-position 50% 0
	box-shadow inset 0 5px 18px rgba(black, .05)
	&__wrapper
		padding-top 60px
	&__content
		display flex
		justify-content space-between
		align-items center
	&__ingredients
		flex-basis 300px
		flex-shrink 0
	&__ingredient
		margin-bottom 55px
		text-align center
	&__ingredient-picture
		margin-bottom 10px
		border-radius 50%
		box-shadow 0 10px 10px rgba(black, .08)
	&__ingredient-title
		margin-bottom 18px
		font-family $alegreya
		font-size 30px
		font-weight bold
		color #a47d5e
	&__ingredient-desc
		margin-x auto
		width 90%
		line-height 1.5
		
	&__right-side
		position relative
		max-width 840px
	&__large-picture
		width 100%
		border 10px solid white
		box-shadow 0 0 32px rgba(black, .05),
		0 10px 10px rgba(black, .1)
	&__button
		position relative
		top -40px
		left -22px
		padding 14px 28px
		font-family $alegreya
		font-size 18px
		font-weight bold
		letter-spacing 1px
		text-transform uppercase
		color #dfc691
		background-color white
		border 1px dashed #dfc691
		&:hover
			color lighten(#dfc691, 15%)
			border 1px dashed lighten(#dfc691, 50%)
	
	&__timings
		position absolute
		top -20px
		right 10px
	&__timing
		margin-bottom 1px
		padding-top 50px
		size 200px
		font-family $alegreya
		font-size 18px
		font-weight bold
		text-align center
		background-color rgba(white, .8)
		&_ready
			margin-top -1px
			padding-top 35px
			background-image url(../images/recipe/ready_background.jpg)
			background-position 50% 50%
			background-size cover
	&__timing-title
		margin-bottom 10px
		letter-spacing 1px
		text-transform uppercase
		color #a47d5e
	&__timing_ready &__timing-title
		margin-bottom 7px

	&__timing-amount
		margin-bottom 5px
		font-size 60px
		text-indent 6px
		letter-spacing 6px
		color #56534c
	&__timing_ready &__timing-amount
		font-size 92px
		color #dfc691

	&__timing-unit
		letter-spacing 1px
		color #979285
		