include ../wrapper/wrapper
include ../icon/icon

mixin header(data)
	+b.header&attributes(attributes)
		+e.navigation
			+wrapper
				+e.logo
					| Gustoso
				+e('nav').menu
					- var topNavigation = data.topNavigation
					- for(var i = 0; i < topNavigation.length; i++)
						+e('a').menu-item(href='#')=topNavigation[i]
				+e.icons
					+e('button').icon-btn
						+icon('twitter').icon
					+e('button').icon-btn
						+icon('facebook').icon
					+e('button').icon-btn
						+icon('instagram').icon
		+wrapper
			+e.banner
				+e.banner-container
					+e.title=data.title
					+e.desc=data.desc
					+e.button-block
						+e('button').button
							| Our menu
			+e.big-icon

