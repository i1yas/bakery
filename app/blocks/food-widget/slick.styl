@import '../../../node_modules/slick-carousel/slick/slick.css'
@import '../../../node_modules/slick-carousel/slick/slick-theme.css'

.slick-loading .slick-list
	background none

.slick-prev:before,
.slick-next:before
	display none
	font-family initial
	
.slick-dots li button:before
	display none
	font-family initial
	
.slick-slide .food-widget__slider-item
	opacity 1
	transition opacity .3s

.slick-current .food-widget__slider-item
	opacity .5