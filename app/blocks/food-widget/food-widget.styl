$picture-width = 420px
$picture-height = 510px
$ready-size = 200px
$slide-size = 90px

.food-widget
	display block
	background-image url(../images/food-widget/main-background.jpg)
	background-position 50% 50%
	background-size cover
	&__wrapper
		position relative
		padding 140px 95px
	&__widget-box
		display flex
		background-color white
		box-shadow 0 25px 54px rgba(#69503a, .45)
	&__pictures
		overflow hidden
		size $picture-width $picture-height
		flex-shrink	0
	&__picture-container
		position relative
		flex-basis 40%
		flex-shrink 0
	&__picture
		height 100%
		vertical-align top
	&__rating-stars
		position absolute
		top 180px
		left 35px
		width 20px
	&__rating-star
		margin-y 5px
		size 24px
		fill white
		stroke white
		stroke-width -30%
		&_stroke
			fill transparent		

	&__text-container
		padding 40px 60px
		display flex
		flex-direction column
		min-width 0
		background-image url(../images/food-widget/box-background.jpg)
		background-repeat no-repeat
		background-position 100% 100%
		justify-content space-between
	
	&__desc
		margin-top 20px
		line-height 2
			
	&__slider
		display flex
		align-items center
		justify-content space-between
	&__arrow
		flex-basis 28px
		size 28px
		background none
		border 2px solid #d8bba3
		border-radius 50%
	&__arrow-icon
		position relative
		top -1px
		size 12px
		vertical-align middle
		fill #d8bba3
		&_left
			left -2px
	&__arrow_right &__arrow-icon
		transform rotate(180deg)
	&__arrow:hover
		border 2px solid #56534c
	&__arrow:hover &__arrow-icon
		fill #56534c
	&__slider-items
		display flex
		width ($slide-size*3 + 60px)
	&__slider-item
		overflow hidden
		size $slide-size
		border none
		border-radius 50%
		flex-shrink 0
	&__slider-picture
		size 100%
	&__ready-container
		position absolute
		top 100px
		right -5px
		padding-top 25px
		size $ready-size
		font-family $alegreya
		font-size 18px
		font-weight bold
		text-align center
		color #a47d5e
		background-color white
		background-image url(../images/food-widget/ready-background.jpg)
		background-position 50% 50%
		background-size cover
		box-shadow 0 25px 54px 1px rgba(#69503a, .45)
	&__ready-sign
		margin-top 10px
		margin-bottom -5px
		text-transform uppercase
	&__ready-amount
		font-size 92px
		color #dfc691
	&__ready-min
		color #a49f94